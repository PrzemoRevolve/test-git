{
  "name": "blog-api",
  "version": "1.0.0",
  "description": "Simple NodeJS + PostgreSQL blog API",
  "main": "dist/server.js",
  "scripts": {
    "build": "npm run build:frontend && tsc",
    "build:frontend": "cd ./frontend && npm run build && rm -rf ../frontend-build && cp -r dist ../frontend-build",
    "start": "node dist/server.js",
    "dev": "nodemon --exec ts-node src/server.ts",
    "dev:watch": "nodemon --watch src --ext ts --exec ts-node src/server.ts",
    "lint": "biome lint src/",
    "lint:fix": "biome lint --write src/",
    "format": "biome format src/",
    "format:write": "biome format --write src/",
    "check": "biome check src/",
    "check:fix": "biome check --write src/"
  },
  "dependencies": {
    "express": "^4.18.2",
    "pg": "^8.11.3",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "ws": "^8.14.2"
  },
  "devDependencies": {
    "nodemon": "^3.0.1",
    "typescript": "^5.2.2",
    "ts-node": "^10.9.1",
    "@types/node": "^20.8.0",
    "@types/express": "^4.17.20",
    "@types/pg": "^8.10.7",
    "@types/cors": "^2.8.14",
    "@types/ws": "^8.5.8",
    "@biomejs/biome": "^1.9.4"
  }
}